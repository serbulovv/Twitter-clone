<div class="border-top profile_block">
  <%= render partial: "profile/profile_background" %>
  <div id="profile_image_background">
    <%= render partial: "profile/avatar" %>
  </div>
  <div class="d-flex justify-content-end setup_profile_button">
    <button class="btn btn-outline-secondary setup_profile_button" data-bs-target="#exampleModalToggle"
      data-bs-toggle="modal">Set up profile</button>
  </div>
  <div class="p-3 info_block">
    <div>
      <p class="d-inline" style="font-size: 20px;"><strong><%= current_user.first_name.capitalize %></strong></p>
    </div>
    <div>
      <p class="d-inline" style="font-size: 15px; color: grey;">
        <strong>@<%= current_user.username.capitalize %></strong></p>
    </div>
    <div class="mt-3">
      <%= current_user.bio.to_s %>
    </div>
    <div class="mt-3">
      <p class="d-inline"><%= image_tag("location.png", style: "max-width: 17px; max-height: 25px;") %>
        <%= current_user.location.to_s %> &nbsp &nbsp</p>
      <p class="d-inline"><%= image_tag("calendar.png", style: "max-width: 17px; max-height: 25px;") %>
        &nbspJoined <%= current_user.created_at.strftime("%B %Y")%></p>
    </div>
    <div class="d-flex mt-2">
      <p style="font-size: 13px;"><strong>0</strong> Followings &nbsp &nbsp &nbsp</p>
      <p style="font-size: 13px;"><strong>0</strong> Followers</p>
    </div>
  </div>
</div>
<%= render partial: "profile/edit_profile_modal" %>