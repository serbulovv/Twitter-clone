<div class="container">
  <div class="row align-items-start">
    <div class="col-3 sticky-top vh-100 p-3">
      <%= link_to image_tag("twitter_icon.png", class: "img-fluid h-25", style: "max-width: 30px; max-height: 30px;"), dashboard_path %>
      <div class="mt-4">
        <%= render partial: "shared/partials/dashboard_menu" %>
      </div>
      <%= button_to "Log out", destroy_user_session_path, method: :delete, class: "btn btn-outline-secondary rounded-pill mt-5 " %>
    </div>
    <div class="col-lg-6 border">
      <%= form_with url: tweet_path, method: :post do |form| %>
      <div class="h2">Tweets</div><br>
      <div class="input-group mb-3">
        <input type="text" name="text" class="form-control" placeholder="What is new?" aria-describedby="button-addon"
          required>
        <div class="input-group-append">
          <%= form.submit "Create tweet", class:"btn btn-outline-primary" %>
        </div>
      </div>
      <% end %>
      <% @tweets.each do |tweet|%>
      <div class="border rounded p-1 mt-2">
        <p><%= tweet.text %></p>
        <p>From: <strong>@<%= tweet.user.username %></strong></p>
      </div>
      <% end %>
    </div>
    <div class="col-3 sticky-top border">
      One of three columns
    </div>
  </div>
</div>